<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.MainActivity">
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/id_recyclerView" android:layout_marginTop="60dp"/>
    <ImageButton
            android:layout_width="53dp"
            android:layout_height="49dp" app:srcCompat="@android:drawable/ic_search_category_default"
            android:id="@+id/id_imageButton"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toTopOf="@+id/id_recyclerView"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:outlineAmbientShadowColor="#8E24AA" android:outlineSpotShadowColor="#3949AB"
            android:backgroundTint="#00F7F7F7" app:layout_constraintVertical_bias="0.0"
            />
    <EditText
            android:layout_width="338dp"
            android:layout_height="46dp"
            android:id="@+id/shownameInput" app:layout_constraintEnd_toStartOf="@+id/id_imageButton"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/id_imageButton"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="0.0"
            android:textColor="#1F1A1A" android:hint="Search..."/>
</androidx.constraintlayout.widget.ConstraintLayout>
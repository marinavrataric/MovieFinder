<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".main.MainActivity" android:background="#009688">
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/email_et_register"
            android:paddingLeft="16dp"
            android:hint="Email"
            android:background="@drawable/radius"
            android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="32dp" android:layout_marginTop="212dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/password_et_register"
            android:paddingLeft="16dp"
            android:hint="Password"
            app:layout_constraintStart_toStartOf="@+id/email_et_register"
            app:layout_constraintEnd_toEndOf="@+id/email_et_register"
            app:layout_constraintHorizontal_bias="0.0"
            android:background="@drawable/radius"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/email_et_register"/>
    <Button
            android:text="Register"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:id="@+id/register_btn_register" app:layout_constraintStart_toStartOf="@+id/password_et_register"
            app:layout_constraintEnd_toEndOf="@+id/password_et_register"
            android:background="@drawable/roundbutton" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/password_et_register"/>
    <TextView
            android:text="Already have an account? Tap here to log in"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textColor="@android:color/white"
            android:textSize="17sp"
            android:id="@+id/already_account_tv" app:layout_constraintEnd_toEndOf="@+id/register_btn_register"
            app:layout_constraintStart_toStartOf="@+id/register_btn_register"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/register_btn_register" android:layout_marginTop="8dp"
            app:layout_constraintVertical_bias="0.24"/>
    <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/register"
            android:layout_height="103dp" app:srcCompat="?attr/actionBarItemBackground"
            android:id="@+id/register_image_view"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="32dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/email_et_register"
            app:layout_constraintHorizontal_bias="0.497" app:layout_constraintVertical_bias="0.745"/>
</androidx.constraintlayout.widget.ConstraintLayout>